<html class="no-js">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>@ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">

    @RenderSection("styles", required: false)
    @Styles.Render("~/content/themes/DevCamps/styles/main.css")
    @Scripts.Render("~/content/themes/DevCamps/scripts/vendor/modernizr.min.js")
</head>
<body class="@ViewBag.BodyCssClass">
    <div id="header-bkgd">
        <div class="wrap">
            <header class="page-header clearfix">
                <a id="home-link" title="Microsoft Dev Camps" href="/">
                    <img src="@Url.Content("~/Content/themes/DevCamps/images/ms-dev-camps-logo.png")" alt="Microsoft Dev Camps logo" />
                </a>

                @Html.Partial(@"Layout\SocialIcons", new ViewDataDictionary { { "section", "header" } })

                @if(ViewBag.BodyCssClass=="interior"){
                @Html.Partial(@"MenuWidget",
                    (IEnumerable<DevCamps.Data.Models.CampType>) ViewBag.CampTypes)}
                    
            </header>

            @RenderSection("header", required: false)
        </div>
    </div>
    <!-- end #header-bkgd -->

    <!-- main content -->
    @RenderBody()
    <!-- end main content -->

    <!-- footer -->
    @Html.Partial(@"Layout\Footer")
    <!-- end footer -->

    @Scripts.Render("~/bundles/DevCamps/scripts")
    @StackExchange.Profiling.MiniProfiler.RenderIncludes()
</body>
</html>
