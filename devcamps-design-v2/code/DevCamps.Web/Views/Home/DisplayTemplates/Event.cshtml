@model DevCamps.Data.Models.Event

<fieldset>
    <legend>Event</legend>

    <div class="display-label">
        @Html.LabelFor(model => model.Location)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Location)
    </div>
    <div class="display-label">
        @Html.LabelFor(model => model.StartDateTime)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.StartDateTime)
    </div>
    <div class="display-label">
        @Html.LabelFor(model => model.DurationDays)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DurationDays)
    </div>
    <div class="display-label">
        @Html.LabelFor(model => model.Presenters)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Presenters)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.Technology)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Technology)
    </div>
    <div class="column">
        <a href='@Model.RegistrationUrl'>
            <div class='content'>
                <div class='button sidebar-button'>
                    <p>
                        Register Now
                    </p>
                </div>
            </div>
        </a>
    </div>
    <div class="column">
        <a href='@Model.RecordingUrl'>
            <div class='content'>
                <div class='button sidebar-button'>
                    <p>
                        Watch Recording
                    </p>
                </div>
            </div>
        </a>
    </div>

</fieldset>
