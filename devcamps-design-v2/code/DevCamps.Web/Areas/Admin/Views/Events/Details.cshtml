@model DevCamps.Data.Models.Event

@{
    ViewBag.Title = "Administration - Event Details";
}
<section class="admin events">
    <div class="editor bg-1">

        <h2>Event Details</h2>

        @Html.DisplayForModel()

        <div class="column">
            <a href="@Url.Action("Edit", new { id = Model.EventId })">
                <div class="button">
                    <p>Edit</p>
                </div>
            </a>
        </div>
        <div class="column">
            <a href="@Url.Action("Index")">
                <div class="button">
                    <p>Back</p>
                </div>
            </a>
        </div>
        <div class="clear" />
    </div>
</section>
